/**index.wxss**/

.userinfo, .formitem, .uploader {
  height: 140rpx;
  width: 100%;
  background: #fff;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo {
  display: none;
  padding-left: 60rpx;
  box-sizing: border-box;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar[size] {
  width: 100rpx;
}


.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname-wrapper {
  flex: 1;
  margin-left: 10px;
  font-size: 32rpx;
  color: #493D34;
}


.formitem{
  display: flex;
  position: relative;
  padding: 0 40rpx;
  height: 108rpx;
  line-height: 108rpx;
  box-sizing: border-box;
  align-items: center;
}

.formitem-label {
  flex: 1;
  font-size: 34rpx;
  color: #493D34;
}

.formitem-container {
  width: 490rpx;
  margin-right: 12rpx;
  text-align: right;
  font-size: 30rpx;
  color: #847B74;
  
}

.formitem-picker {
  width: 460rpx;
  height: 100%;
  text-align: right;
  font-size: 30rpx;
  color: #847B74;
}


.uploader {
  height: auto;
  flex-direction: column;
  align-items: flex-start;
  box-sizing: border-box;
}

.uploader-text {
  margin-left: 40rpx;
  line-height: 52px;
  font-size: 34rpx;
  color: #847B74;
}

.uploader-container {
  position: relative;
  width: 100%;
  height: 400rpx;
  padding: 20rpx;
  display: flex;
  align-content: center;
  justify-content: center;
  box-sizing: border-box;
  background: #eceff1;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}


.uploader-container-placeholder {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
}

.uploader-image {
  width: 100%;
  height: 360rpx;
}
.submitBtn{
  margin: 60rpx 0;
}
.request-text {
  padding: 20rpx 0;
  font-size: 24rpx;
  line-height: 36rpx;
  word-break: break-all;
}
