/**index.wxss**/
page{
  background: #FFF;
}

.musicBox{
  position: fixed;
  top: 40rpx;
  right: 35rpx;
  padding: 8rpx;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.3);
  box-sizing: border-box;
  z-index: 99;
}
.roate{
  animation: rotate 3s linear infinite;
}
@keyframes rotate{
  from{transform: rotate(0deg)}
  to{transform: rotate(360deg)}
}

.footer{
  position: relative;
  margin: 137rpx auto 0;
  text-align: center;
  letter-spacing: 40rpx;
  font-size: 24rpx;
  color: #FFF;
  z-index: 2;
}

.one-warp{
  position: relative;
  width: 750rpx;
  height: 1333rpx;
}
.one-warp-bj{
